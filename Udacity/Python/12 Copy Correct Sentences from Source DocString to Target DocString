    # approach 3
    pop_counter = 0
    for i, sentence in enumerate(list_source):
        print(sentence)
        print(f"before: {list_source}")
        
        if sentence[0].isupper() == False:
            list_source.pop(i - pop_counter)
            pop_counter+=1
            print(f"path1, i {i}, pop_counter {pop_counter}")
            print(f"after: {list_source}\n")
            continue
        
        if sentence[-1] != '.':
            list_source.pop(i - pop_counter)
            pop_counter+=1
            print(f"path2, i {i}, pop_counter {pop_counter}")
            print(f"after: {list_source}\n")
            continue
        
        print("path3, i {i}, pop_counter {pop_counter}")
        print(f"after: {list_source}\n")
    
    
    # Incorrect sentences are not copied.
    # The order of the sentences must remain the same.
    # So we used the remove technique above
    # to remove a sentence if it does not match
    # any of the correct sentence criteria

    
    print(list_source)
